{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "allowUnusedLabels": false,

    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, // vue/vetur needs this
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*",
    "./docs/.vitepress/**/*",
    "./docs/**/*",
    "./**/.fiction/*"
  ],

  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "dist",
    "cache",
    "**/dist/**",
    ".ref/**",
    "**/.ref-*/**",
    "**/__*",
    "__*",
    ".git",
    "**/.fiction/**",
    ".pnpmfile.cjs"
  ]

}
